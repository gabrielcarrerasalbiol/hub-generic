# Variables de entorno para Hub Madridista
# IMPORTANTE: Renombrar este archivo a .env y completar con valores reales

# Configuración de JWT
JWT_SECRET=cambia_este_valor_a_una_clave_secreta_fuerte_y_larga
JWT_EXPIRES_IN=7d

# Base de datos
DATABASE_URL=postgresql://user:password@host:5432/database

# Configuración de OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# URLs de la aplicación
CALLBACK_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5000

# Seguridad
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos en milisegundos
RATE_LIMIT_MAX_REQUESTS=1000  # Máximo de solicitudes en la ventana de tiempo
CORS_ALLOWED_ORIGINS=http://localhost:5000,https://tu-dominio.com

# Configuración de APIs externas para contenido
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
YOUTUBE_API_KEY=