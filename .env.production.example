# Variables de entorno para Hub Madridista - ENTORNO DE PRODUCCIÓN
# IMPORTANTE: Renombrar este archivo a .env.production y completar con valores reales

# Entorno
NODE_ENV=production

# Configuración de JWT
JWT_SECRET=cambia_este_valor_a_una_clave_secreta_fuerte_y_larga_para_produccion
JWT_EXPIRES_IN=30d

# Configuración de sesión
SESSION_SECRET=otro_valor_secreto_fuerte_para_las_sesiones_en_produccion
SESSION_MAX_AGE=604800000  # 7 días en milisegundos

# Base de datos 
# NOTA: En producción usamos PROD_DATABASE_URL en lugar de DATABASE_URL
PROD_DATABASE_URL=postgresql://user:password@host:5432/production_database

# Configuración de OAuth (opcional, solo si utilizas inicio de sesión social)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# URLs de la aplicación (Actualiza estos valores con tu dominio real)
CALLBACK_URL=https://tu-dominio.com
FRONTEND_URL=https://tu-dominio.com

# Seguridad
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos en milisegundos
RATE_LIMIT_MAX_REQUESTS=500  # Menos solicitudes permitidas en producción para prevenir abusos
CORS_ALLOWED_ORIGINS=https://tu-dominio.com

# Configuración de Mailchimp (para newsletter)
MAILCHIMP_API_KEY=tu_clave_api_mailchimp
MAILCHIMP_SERVER_PREFIX=us17  # Ejemplo: us17, cambia según tu región
MAILCHIMP_AUDIENCE_ID=tu_id_de_audiencia

# Configuración de APIs externas para contenido (opcional, pero recomendado)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
YOUTUBE_API_KEY=

# Configuración adicional
SUPPORT_EMAIL=soporte@tu-dominio.com
ADMIN_EMAIL=admin@tu-dominio.com