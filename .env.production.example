# Ejemplo de configuración para producción
# Copia este archivo a .env.production y configura los valores adecuados

# ============================================================
# VARIABLES OBLIGATORIAS
# ============================================================

# Configuración de entorno y puerto
NODE_ENV=production
PORT=5000

# Base de datos
# URL completa de PostgreSQL para conexión a la base de datos de producción
PROD_DATABASE_URL=postgres://usuario:contraseña@hostname:5432/nombre_db

# Secretos para autenticación (genera valores únicos y seguros)
JWT_SECRET=cambia_esto_por_un_valor_secreto_unico_y_seguro
SESSION_SECRET=cambia_esto_por_otro_valor_secreto_unico_y_seguro

# URLs y CORS
FRONTEND_URL=https://hubmadridista.replit.app
CORS_ALLOWED_ORIGINS=https://hubmadridista.replit.app

# ============================================================
# VARIABLES RECOMENDADAS
# ============================================================

# Mailchimp (para newsletter)
MAILCHIMP_API_KEY=your_mailchimp_key_here
MAILCHIMP_SERVER=us17
MAILCHIMP_AUDIENCE_ID=your_audience_id_here

# Google OAuth (para inicio de sesión con Google)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
CALLBACK_URL=https://hubmadridista.replit.app/api/auth/google/callback

# Claves de API para servicios de IA
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here
OPENAI_API_KEY=your_openai_key_here

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100  # Número máximo de solicitudes por ventana

# ============================================================
# VARIABLES OPCIONALES
# ============================================================

# Apple OAuth (para inicio de sesión con Apple)
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_KEY_ID=your_apple_key_id_here
APPLE_PRIVATE_KEY_LOCATION=/ruta/absoluta/a/AuthKey.p8

# Configuración de logs
LOG_LEVEL=info  # Options: debug, info, warning, error

# Configuración de caché
CACHE_TTL=3600  # Tiempo de vida del caché en segundos